              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background= "@color/black">

    <com.example.capstone.SubsamplingScaleImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
  
    <ImageView
